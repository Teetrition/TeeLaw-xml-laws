<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Law Era="Meiji" Year="22" Num="034" LawType="Act" Lang="ja" PromulgateMonth="12" PromulgateDay="30"><LawNum>明治二十二年法律第三十四号</LawNum><LawBody><LawTitle Kana="けっとうざいにかんするけん" Abbrev="" AbbrevKana="">有关决斗罪之件</LawTitle>
    <MainProvision>
      <Article Num="1">
        <ArticleTitle>第一条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence Num="1" WritingMode="vertical">挑起决斗的，或是响应其挑起的决斗的，处六个月以上二年以下的拘禁刑。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Num="2">
        <ArticleTitle>第二条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence Num="1" WritingMode="vertical">进行决斗的，处二年以上五年以下的拘禁刑。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Num="3">
        <ArticleTitle>第三条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence Num="1" WritingMode="vertical">因决斗杀伤他人的，依照刑法各本条处断。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Num="4">
        <ArticleTitle>第四条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence Num="1" WritingMode="vertical">为决斗作见证或是约定作见证的，无论以证人、辅助人等何种名义，处一年以下的拘禁刑。</Sentence>
          </ParagraphSentence>
        </Paragraph>
        <Paragraph Num="2" OldNum="true" OldStyle="false">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence Num="1" WritingMode="vertical">知情而租借或提供决斗场所的，处罚同前项规定。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Num="5">
        <ArticleTitle>第五条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence Num="1" WritingMode="vertical">以不响应挑起的决斗为由毁损他人名誉的，依照刑法以诽毁罪论。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Num="6">
        <ArticleTitle>第六条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence Num="1" WritingMode="vertical">将前数条规定的犯罪与刑法进行比较，按刑罚更重的处断。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
    </MainProvision>
    <SupplProvision AmendLawNum="令和四年六月十七日法律第六十八号" Extract="true">
      <SupplProvisionLabel>附　则</SupplProvisionLabel>
      <Paragraph Num="1">
        <ParagraphCaption>（施行期日）</ParagraphCaption>
        <ParagraphNum>１</ParagraphNum>
        <ParagraphSentence>
          <Sentence Function="main" Num="1" WritingMode="vertical">本法自部分修改刑法等的法律的施行日起施行。</Sentence>
          <Sentence Function="proviso" Num="2" WritingMode="vertical">但是，下列各号中的规定在对应各号规定的日期起施行。</Sentence>
        </ParagraphSentence>
        <Item Num="1">
          <ItemTitle>一</ItemTitle>
          <ItemSentence>
            <Column Num="1">
              <Sentence Num="1" WritingMode="vertical">第五百零九条的规定</Sentence>
            </Column>
            <Column Num="2">
              <Sentence Num="1" WritingMode="vertical">公布之日</Sentence>
            </Column>
          </ItemSentence>
        </Item>
      </Paragraph>
    </SupplProvision>
  </LawBody>
</Law>
