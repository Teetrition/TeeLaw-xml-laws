        <ParagraphNum/>
        <ParagraphSentence>
          <Sentence Num="1" WritingMode="vertical">本法施行的期日以敕令规定。</Sentence>
        </ParagraphSentence>
      </Paragraph>
    </SupplProvision>
  </LawBody>
</Law>