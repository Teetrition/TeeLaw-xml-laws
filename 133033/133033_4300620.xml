<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Law Era="Meiji" Lang="ja" LawType="Act" Num="033" Year="33" PromulgateMonth="03" PromulgateDay="07">
  <LawNum>明治三十三年法律第三十三号</LawNum>
  <LawBody>
    <LawTitle Kana="はたちみまんのもののきつえんのきんしにかんするほうりつ" Abbrev="" AbbrevKana="">禁止未成年人吸烟法</LawTitle>
    <MainProvision>
      <Article Num="1">
        <ArticleTitle>第一条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence>不满二十岁的人禁止吸食烟草。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="2">
        <ArticleTitle>第二条</ArticleTitle>
        <Paragraph Hide="false" Num="1" OldStyle="false">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">违反前条的，以行政处分没收为吸烟所持有的烟草及器具。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="3">
        <ArticleTitle>第三条</ArticleTitle>
        <Paragraph Hide="false" Num="1" OldStyle="false">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">对未成年人行使亲权的人知情却不制止其吸烟的，处科料。</Sentence>
          </ParagraphSentence>
        </Paragraph>
        <Paragraph Hide="false" Num="2" OldStyle="false" OldNum="true">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">代行使亲权的人监督未成年人的，亦按照前项处断。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Num="4">
        <ArticleTitle>第四条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence>贩卖烟草或器具的人为防止不满二十岁的人吸烟，应当采取确认年龄等必要措施。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Num="5">
        <ArticleTitle>第五条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence>知道将供不满二十岁的人自用仍贩卖烟草或器具的，处五十万日元以下的罚金。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="6">
        <ArticleTitle>第六条</ArticleTitle>
        <Paragraph Hide="false" Num="1" OldStyle="false">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">法人的代表人、法人或自然人的代理人、雇员或其他从业者就其法人或自然人的业务有前条的违反行为的，除处罚行为人外，对该法人或自然人科以同条的刑罚。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
    </MainProvision>
    <SupplProvision>
      <SupplProvisionLabel>附　则</SupplProvisionLabel>
      <Paragraph Hide="false" Num="1" OldStyle="false">
        <ParagraphNum/>
        <ParagraphSentence>
          <Sentence WritingMode="vertical">本法自明治三十三年四月一日起施行。</Sentence>
        </ParagraphSentence>
      </Paragraph>
    </SupplProvision>
    <SupplProvision AmendLawNum="昭和二十二年十二月二十二日法律第二百二十三号" Extract="true">
      <SupplProvisionLabel>附　则</SupplProvisionLabel>
      <Article Delete="false" Hide="false" Num="29">
        <ArticleTitle>第二十九条</ArticleTitle>
        <Paragraph Hide="false" Num="1" OldStyle="false">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">本法自昭和二十三年一月一日起施行。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
    </SupplProvision>
    <SupplProvision AmendLawNum="平成十二年十二月一日法律第一百三十四号">
      <SupplProvisionLabel>附　则</SupplProvisionLabel>
      <Paragraph Hide="false" Num="1" OldStyle="false">
        <ParagraphNum/>
        <ParagraphSentence>
          <Sentence WritingMode="vertical">本法自公布之日起算经过三十日后施行。</Sentence>
        </ParagraphSentence>
      </Paragraph>
    </SupplProvision>
    <SupplProvision AmendLawNum="平成十三年十二月十二日法律第一百五十二号" Extract="true">
      <SupplProvisionLabel>附　则</SupplProvisionLabel>
      <Paragraph Hide="false" Num="1" OldStyle="false">
        <ParagraphCaption>（施行期日）</ParagraphCaption>
        <ParagraphNum>１</ParagraphNum>
        <ParagraphSentence>
          <Sentence WritingMode="vertical">本法自公布之日起施行。</Sentence>
        </ParagraphSentence>
      </Paragraph>
    </SupplProvision>
    <SupplProvision AmendLawNum="平成三十年六月二十日法律第五十九号" Extract="true">
      <SupplProvisionLabel>附　则</SupplProvisionLabel>
      <Article Num="1">
        <ArticleCaption>（施行期日）</ArticleCaption>
        <ArticleTitle>第一条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence Function="main" Num="1">本法自平成三十四年四月一日起施行。</Sentence>
            <Sentence Function="proviso" Num="2">但是，附则第二十六条的规定自公布之日起施行。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Num="25">
        <ArticleCaption>（有关罚则的过渡措施）</ArticleCaption>
        <ArticleTitle>第二十五条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence>对于施行日前的行为及根据附则第十三条之规定适用修改前的规定时对施行日以后的行为的罚则的适用，适用修改前的规定。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Num="26">
        <ArticleCaption>（对政令的委任）</ArticleCaption>
        <ArticleTitle>第二十六条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence>除本附则的规定外，有关本法施行的必要的过渡措施，由政令规定。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
    </SupplProvision>
  </LawBody>
</Law>
