<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Law Era="Meiji" Lang="ja" LawType="Act" Num="097" Year="23" PromulgateMonth="10" PromulgateDay="07">
  <LawNum>明治二十三年法律第九十七号</LawNum>
  <LawBody>
    <LawTitle Kana="ほうれい" Abbrev="" AbbrevKana="ほ">法例</LawTitle>
    <MainProvision>
      <Article Delete="false" Hide="false" Num="1">
        <ArticleTitle>第一条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical" Num="1" Function="main">法律自公布之日起满二十日后应被遵守。</Sentence>
            <Sentence WritingMode="vertical" Num="2" Function="proviso">但是，法律中有特别规定时不在此限。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="2">
        <ArticleTitle>第二条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">法律不具有溯及既往的效力。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="3">
        <ArticleTitle>第三条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">人的身份及能力，按其本国法。</Sentence>
          </ParagraphSentence>
        </Paragraph>
        <Paragraph Num="2" OldNum="true">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">亲属的关系及其关系产生的权利义务，亦同。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="4">
        <ArticleTitle>第四条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">动产、不动产，按其所在地的法律。</Sentence>
          </ParagraphSentence>
        </Paragraph>
        <Paragraph Num="2" OldNum="true">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">然而，继承及遗赠，按被继承人及遗赠人的本国法。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="5">
        <ArticleTitle>第五条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">在外国作出的合意，按当事人明示或默示的意思选择的应适用的国家的法律确定。</Sentence>
          </ParagraphSentence>
        </Paragraph>
        <Paragraph Num="2" OldNum="true">
            <ParagraphNum/>
            <ParagraphSentence>
              <Sentence WritingMode="vertical">当事人意思不明的情况下，为相同国家的人时，适用其本国法；或是不是相同国家的人时，适用事实上与合意有最大联系之地的法律。</Sentence>
            </ParagraphSentence>
          </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="6">
        <ArticleTitle>第六条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">外国人在日本与日本人作出合意时，外国人的能力，适用其本国法与日本法中对合意的成立最有益的法律。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="7">
        <ArticleTitle>第七条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">不当得利、不正当的损害及法律上的管理，按其原因发生之地的法律。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="8">
        <ArticleTitle>第八条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical" Num="1">在应适用本国法的各种情况下，没有任何国籍的人或因地方不同而法律不同的国家的人民，按其住所的法律。</Sentence>
            <Sentence WritingMode="vertical" Num="2">如无法得知住所时，按其居所的法律。</Sentence>
          </ParagraphSentence>
        </Paragraph>
        <Paragraph Num="2" OldNum="true">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">具有日本与外国国籍的人，按日本法律；或是具有两个以上的外国国籍的人，按最后取得国籍的国家的法律。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="9">
        <ArticleTitle>第九条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical" Num="1" Function="main">公正证书及私署证书的方式，按作出的国家的法律。</Sentence>
            <Sentence WritingMode="vertical" Num="2" Function="proviso">但是，一人或相同国家的人的数人作出的私署证书，可以按其本国法。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="10">
        <ArticleTitle>第十条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical" Num="1" Function="main">即使是要式的合意或行为，按作出的国家的方式时，方式上为有效。</Sentence>
            <Sentence WritingMode="vertical" Num="2" Function="proviso">但是，故意脱离日本法律时，不在此限。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="11">
        <ArticleTitle>第十一条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">在外国依照该国的方式作出的证书，涉及移转不动产物件的行为时，该不动产所在地的地方裁判所长；或是涉及其他行为时，当事人的住所或居所的地方裁判所长：非经前述人检验认可其证书适法，不得在日本发挥其效用。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="12">
        <ArticleTitle>第十二条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">为第三人的利益设定的公示的方式，涉及不动产时，按其所在地的法律；其他情况下，按其原因发生的国家的法律。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="13">
        <ArticleTitle>第十三条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">诉讼程序，按其诉讼的国家的法律。</Sentence>
          </ParagraphSentence>
        </Paragraph>
        <Paragraph Num="2" OldNum="true">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">裁判及合意的执行方法，按其执行的国家的法律。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="14">
        <ArticleTitle>第十四条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">有关刑罚法及其他公法的事项及有关公共秩序或善良风俗时，不问行为地、当事人的国籍及财产性质如何，适用日本法律。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="15">
        <ArticleTitle>第十五条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">与有关公共秩序或善良风俗的法律相抵触或欲排除其适用的合意或行为不成立。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="16">
        <ArticleTitle>第十六条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">排除规定身份或能力的法律的合意或行为无效。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
      <Article Delete="false" Hide="false" Num="17">
        <ArticleTitle>第十七条</ArticleTitle>
        <Paragraph Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical">判事不得以法律不明、不完备或有欠缺为口实拒绝作出裁判。</Sentence>
          </ParagraphSentence>
        </Paragraph>
      </Article>
    </MainProvision>
  </LawBody>
</Law>